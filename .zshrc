update-yabai-sudoers() {
  YABAI_PATH=$(which yabai)
  YABAI_SHA256=$(shasum -a 256 "$YABAI_PATH" | cut -d " " -f 1)
  SUDOERS_LINE="$(whoami) ALL=(root) NOPASSWD: sha256:$YABAI_SHA256 $YABAI_PATH --load-sa"
  echo "$SUDOERS_LINE" | sudo tee /private/etc/sudoers.d/yabai > /dev/null
  sudo chmod 440 /private/etc/sudoers.d/yabai
  echo "Sudoers file updated successfully!"
}

